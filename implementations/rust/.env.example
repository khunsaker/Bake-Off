# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Selection (postgres, neo4j, or memgraph)
DATABASE_TYPE=postgres

# PostgreSQL Configuration
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/shark_bakeoff

# Neo4j Configuration
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Memgraph Configuration
MEMGRAPH_URL=bolt://localhost:7689

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=activity-events
KAFKA_ENABLED=true

# Logging
RUST_LOG=shark_bakeoff_rust=info,tower_http=info
